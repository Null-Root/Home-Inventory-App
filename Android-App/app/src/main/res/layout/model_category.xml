<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/categorySubContainer"
        android:layout_width="300dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/categoryNameHolder"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Sample Category"
            android:textColor="@color/black"
            android:textSize="17.5sp" />

        <ImageView
            android:id="@+id/categorySettingsHolder"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="70dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="settings"
            android:src="@drawable/ic_settings_24" />

        <ImageView
            android:id="@+id/categoryDeleteHolder"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="delete"
            android:src="@drawable/ic_delete_mini" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/categoryItemCountHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categorySubContainer"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>