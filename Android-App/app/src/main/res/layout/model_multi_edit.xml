<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multiEditContainer"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:cardBackgroundColor="#b39ef8"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/multiEditNameHolder"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Sample Category"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/multiEditSettingsHolder"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="70dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="settings"
        android:src="@drawable/ic_settings_24" />

    <ImageView
        android:id="@+id/multiEditDeleteHolder"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="delete"
        android:src="@drawable/ic_delete_mini" />

</androidx.cardview.widget.CardView>